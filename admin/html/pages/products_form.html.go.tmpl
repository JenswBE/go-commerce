{{ template "base.html.go.tmpl" . }}

{{ define "base_content" }}
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1 class="h2">
      Product {{ if .IsNew }}toevoegen{{ else }}aanpassen{{ end }}
    </h1>
  </div>

  <form method="post">
    <div class="mb-3">
      <label for="inputName" class="form-label">Naam *</label>
      <input
        required
        type="text"
        name="name"
        class="form-control"
        id="inputName"
        value="{{ .Product.Name }}"
        placeholder="Bv. JenswBE"
      />
    </div>
    <div class="mb-3">
      <label for="inputPrice" class="form-label">Prijs in EURO *</label>
      <input
        required
        type="number"
        step="0.01"
        min="0"
        name="price"
        class="form-control"
        id="inputPrice"
        value="{{ .Product.Price }}"
        placeholder="15.99"
      />
    </div>
    <div class="mb-3">
      <label for="inputManufacturer" class="form-label">Merk</label>
      <select class="form-select" id="inputManufacturer" name="manufacturer_id">
        <option
          value=""
          {{ if eq (len $.Product.ManufacturerID) 0 }}selected{{ end }}
        >
          - Merkloos -
        </option>
        {{ range .Manufacturers }}
          <option
            value="{{ .ID.String }}"
            {{ if eq $.Product.ManufacturerID .ID.String }}selected{{ end }}
          >
            {{ .Name }}
          </option>
        {{ end }}
      </select>
    </div>
    <div class="mb-3">
      <p>Categorie&euml;n</p>
      {{ range .Categories }}
        <div class="form-check">
          <input
            {{ if $.Product.HasCategoryID .ID.String }}checked{{ end }}
            class="form-check-input"
            type="checkbox"
            value="{{ .ID.String }}"
            id="inputCategory{{ .ID.String }}"
            name="category_ids"
          />
          <label class="form-check-label" for="inputCategory{{ .ID.String }}">
            {{ .Name }}
          </label>
        </div>
      {{ end }}
    </div>
    <div class="mb-3">
      <label for="inputStockCount" class="form-label">In voorraad</label>
      <input
        type="number"
        min="0"
        name="stock_count"
        class="form-control"
        id="inputStockCount"
        value="{{ .Product.StockCount }}"
        placeholder="15"
      />
    </div>

    <a href="{{ getURL "products" }}" class="btn btn-danger">Annuleren</a>
    <button type="submit" class="btn btn-success">Opslaan</button>
  </form>
{{ end }}
