{{ template "empty.html.go.tmpl" . }}

{{ define "empty_head" }}
  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }

    .b-example-divider {
      height: 3rem;
      background-color: rgba(0, 0, 0, 0.1);
      border: solid rgba(0, 0, 0, 0.15);
      border-width: 1px 0;
      box-shadow: inset 0 0.5em 1.5em rgba(0, 0, 0, 0.1),
        inset 0 0.125em 0.5em rgba(0, 0, 0, 0.15);
    }

    .b-example-vr {
      flex-shrink: 0;
      width: 1.5rem;
      height: 100vh;
    }

    .bi {
      vertical-align: -0.125em;
      fill: currentColor;
    }

    .nav-scroller {
      position: relative;
      z-index: 2;
      height: 2.75rem;
      overflow-y: hidden;
    }

    .nav-scroller .nav {
      display: flex;
      flex-wrap: nowrap;
      padding-bottom: 1rem;
      margin-top: -1px;
      overflow-x: auto;
      text-align: center;
      white-space: nowrap;
      -webkit-overflow-scrolling: touch;
    }
  </style>

  <link href="/admin/static/css/main.css" rel="stylesheet" />

  {{ block "base_head" . }}{{ end }}
{{ end }}

{{ define "empty_content" }}
  <header
    class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow"
  >
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="/admin">
      GoCommerce
    </a>
    <button
      class="navbar-toggler position-absolute d-md-none collapsed"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#sidebarMenu"
      aria-controls="sidebarMenu"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <input
      class="form-control form-control-dark w-100 rounded-0 border-0"
      type="text"
      placeholder="Search"
      aria-label="Search"
    />
    <div class="navbar-nav">
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3" href="#">Sign out</a>
      </div>
    </div>
  </header>

  <div class="container-fluid">
    <div class="row">
      <nav
        id="sidebarMenu"
        class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse"
      >
        <div class="position-sticky pt-3 sidebar-sticky">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a
                class="nav-link {{ if eq .ParentPath "products" }}
                  active
                {{ end }}"
                href="/admin/products/"
              >
                <i class="bi bi-box-seam"></i>
                Producten
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link {{ if eq .ParentPath "categories" }}
                  active
                {{ end }}"
                href="/admin/categories/"
              >
                <i class="bi bi-tag"></i>
                CategorieÃ«n
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link {{ if eq .ParentPath "manufacturers" }}
                  active
                {{ end }}"
                href="/admin/manufacturers/"
              >
                <i class="bi bi-building"></i>
                Merken
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link {{ if eq .ParentPath "events" }}
                  active
                {{ end }}"
                href="/admin/events/"
              >
                <i class="bi bi-calendar-event"></i>
                Evenementen
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link {{ if eq .ParentPath "content" }}
                  active
                {{ end }}"
                href="/admin/content/"
              >
                <i class="bi bi-blockquote-left"></i>
                Inhoud
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        {{ block "base_content" . }}{{ end }}
      </main>
    </div>
  </div>
{{ end }}

{{ define "empty_body_end" }}
  <script src="/admin/static/js/dashboard.js"></script>
  {{ block "base_body_end" . }}{{ end }}
{{ end }}
